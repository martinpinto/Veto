<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Veto Political Platform</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.4/cosmo/bootstrap.min.css">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="../stylesheets/style.css">
</head>

<body class="all-content">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div id="header"></div>
  </nav>
  <div class="container main">
    <div class="row">
      <div class="col-md-11 col-lg-11">
        <form class="form-horizontal" role="form" action="/api/v1/quotes" method="post">
          <div class="form-group">
            <label class="control-label col-sm-2" for="message">Message:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="message" name="message">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="topic">Topic:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="topic" name="topic">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="hashtags">Hashtags:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="hashtags" name="hashtags">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="source">Source:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="source" name="source">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="author">Author:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="author" name="author">
            </div>
          </div>
          <input type="submit" class="btn btn-default"></input>
        </form>
      </div>
    </div>
  </div>

  <div id="footer"></div>
  <div id="footer-bottom"></div>

  <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.13.3/react.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.13.3/JSXTransformer.js"></script>
  <script src="../../javascripts/components/footer.js" type="text/jsx"></script>
  <script src="../../javascripts/components/header.js" type="text/jsx"></script>

</body>

</html>
